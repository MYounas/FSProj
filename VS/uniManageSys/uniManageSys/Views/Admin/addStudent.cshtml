@model uniManageSys.Models.Student
@{
    ViewBag.Title = "Register";
}
@using System.Net.Mime
@using Microsoft.Web.Helpers
@using uniManageSys.Models

<script src='https://www.google.com/recaptcha/api.js'></script>
<script src="~/Scripts/jquery-2.2.0.js"></script>
<script src="~/Scripts/jquery-2.2.0.min.js"></script>
<link href="~/Scripts/jquery-ui.min.css" rel="stylesheet" />

<script src="~/bootstrap/js/bootstrap.min.js"></script>
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-2.2.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<link href="~/Content/Site.css" rel="stylesheet" />

<script type="text/javascript">
    $.noConflict();
</script>

<div class="container">

    <div class="logo col-sm-12 text-center col-md-12 "> <img alt="" src="~/Images/ubit-logo.jpg"/>
    </div>
    <div class="text-center col-lg-12 col-md-12 alert alert-warning">
        @*<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>*@
        @ViewBag.existMsg
    </div>

    <div class="clearfix"></div>

    @using (Html.BeginForm())
    {
                    @Html.AntiForgeryToken()
                    <fieldset>
            
                        <legend class="legend">Register</legend>

            <div class="panel">

                <div class="panel-body">

                    <br />

                    <div class="col-md-6 col-sm-12">
                        <div class="row">

                            <div class="form-group">
                                <div class="col-md-6 col-sm-6">
                                    Full Name
                                </div>

                                <div class="col-md-6 col-sm-6">
                                    @Html.TextBoxFor(m => m.fullName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.fullName)

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-6 col-sm-6">
                                    User Name
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    @Html.TextBoxFor(m => m.userName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.userName)
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6">
                                    EmailID
                                </div>

                                <div class="col-md-6 col-sm-6">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6">
                                    Password
                                </div>

                                <div class="col-md-6 col-sm-6">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>

                            </div>

                            <div class="form-group">
                                <div class="col-md-6 col-sm-6">
                                    Confirm Password
                                </div>

                                <div class="col-md-6 col-sm-6">

                                    @Html.PasswordFor(m => m.confirmPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.confirmPassword)
                                </div>

                            </div>

                            <div class="form-group">
                                <div class="col-md-6 col-sm-6">
                                    Phone
                                </div>

                                <div class="col-md-6 col-sm-6">

                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Phone)
                                </div>

                            </div>


                            <div class="form-group">
                                <div class="col-md-6 col-sm-6">
                                    Field
                                </div>

                                <div class="col-md-6 col-sm-6">
                                    @Html.DropDownListFor(m => m.Field, new List<SelectListItem>
                                    {
                                        new SelectListItem {Text = "BSSE", Value = "BSSE"},
                                        new SelectListItem {Text = "BSCS", Value = "BSCS"},
                                        new SelectListItem {Text = "MCS", Value = "MCS"}
                                    }, "Select Field", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Field)
                                </div>

                            </div>


                            <div class="form-group">
                                <div class="col-md-6 col-sm-6">
                                    Gender
                                </div>

                                <div class="col-md-6 col-sm-6">

                                    @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>
                                    {
                                        new SelectListItem {Text = "Male", Value = "Male"},
                                        new SelectListItem {Text = "FeMale", Value = "FeMale"}
                                    }, "Select Gender", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Gender)
                                </div>

                            </div>

                            <div class="form-group">
                                <div class="col-md-6 col-sm-6">
                                    Datae Of Birth
                                </div>

                                <div class="col-md-6 col-sm-6">
                                    @Html.TextBoxFor(m => m.DateOfBirth, String.Format("0:d"), new { @class = "form-control", type = "date" })
                                    @Html.ValidationMessageFor(m => m.DateOfBirth)
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="col-md-6 col-sm-6">

                        <img id="img" src="" alt="Upload Image"/>
                        @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control btn btn-info", type = "file",name="file",id="inImg",onchange="loadImg(this);",accept="image/*" })
                        @Html.ValidationMessageFor(model=>model.ImageUrl)

                        <div class="g-recaptcha" data-sitekey="6LdeyhUTAAAAAGIuNu5ZeVKk84c5FKxXst4AYxLZ"></div>
                        <br/><b style="color: red;">@ViewBag.Message</b>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                                <input id="Submit" class="btn btn-success" name="actionType" type="submit" value="Save" />
                                <input type="reset" value="Reset" class="btn btn-danger"/>
                        </div>
                    </div>

                </div>
            </div>

        </fieldset>
    }
</div>
<script>

    function loadImg(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                $('#img').attr('src', e.target.result).width(150).height(150);
            };
            reader.readAsDataURL(input.files[0]);
        } 
    }

</script>