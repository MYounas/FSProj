@model IEnumerable<uniManageSys.Models.Student>

@{
    ViewBag.Title = "All Students";
}

@using GridMvc.Html

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-2.2.0.min.js"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
<link href="~/Content/Site.css" rel="stylesheet"/>

<div class="container">
 <div class="logo col-sm-12 text-center col-md-12 "> <img alt=""  src="~/Images/ubit-logo.jpg" /></div>

<div class="clearfix"></div>

    <fieldset>
        <legend class="legend">All Students</legend>

        <div class="panel">

            <div class="panel-body">

                <div>
                    @Html.ActionLink("Add Student", "addStudent", "Admin", new { @class = "btn btn-info btn-pressure" })
                </div>
                <div style="margin-top: 10px"></div>
                @Html.Grid(Model).Columns(columns =>
           {
               columns.Add().RenderValueAs(c =>@<b>@Html.ActionLink("Edit", "EditStudent", "Admin", new { c.Id }, null)</b>);
               columns.Add().RenderValueAs(c =>@<b>@Html.ActionLink("Delete", "DeleteStudent", "Admin", new { c.Id }, null)</b>);
               columns.Add(c => c.userName).Titled("userName").Filterable(true);
               columns.Add(c => c.Field).Titled("Field").Filterable(true);
           }).Sortable()

            </div>
        </div>
    </fieldset>

</div>
