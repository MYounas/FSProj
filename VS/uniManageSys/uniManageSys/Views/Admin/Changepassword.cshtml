@model uniManageSys.Models.upPassword
@{
    ViewBag.Title = "Changepassword";
}

<script src="~/Scripts/jquery-2.2.0.min.js"></script>
<script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
<script src="~/bootstrap/js/bootstrap.min.js"></script>
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Scripts/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<link href="~/Content/Site.css" rel="stylesheet" />

<div class="container">

    <div class="logo col-sm-12 text-center col-md-12 ">
        <img alt="" src="~/Images/ubit-logo.jpg" />
    </div>

    <div class="clearfix"></div>
    @if (ViewBag.ResultMessage != null)
    {
        <div class="alert alert-success" style="float: none;" role="alert">
            @ViewBag.ResultMessage
        </div>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <fieldset>
            <legend class="legend">Change password</legend>
            <div class="panel">

                <div class="panel-body">

                    <div class="row">
                        <div class="col-md-3">New Password</div>
                        <div class="col-md-3">
                            @Html.PasswordFor(m => m.newPassword, new {@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.newPassword)
                            <br />
                        </div>
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-3">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">Confirm Password</div>
                        <div class="col-md-3">
                            @Html.PasswordFor(m => m.confirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.confirmPassword)
                            <br />
                        </div>
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-3">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">Old Password</div>
                        <div class="col-md-3">
                            @Html.PasswordFor(m => m.oldPassword, new {@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.oldPassword)
                        </div>
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-3">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-success btn-pressure" value="Submit" />
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>

    }
</div>

